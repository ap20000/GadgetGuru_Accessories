<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".Aboutus">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="24sp"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/imageViewComputerParts"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/textViewComputerPartsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewComputerParts"
        android:layout_marginTop="54dp"
        android:text="Discover our wide range of computer part accessories, including keyboards, mice, monitors, and more. We offer high-quality products to enhance your computing experience." />

    <Button
        android:id="@+id/buttonContactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewComputerPartsDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Read More" />
</RelativeLayout>
